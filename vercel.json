{
    "builds": [
        {
            "src": "albiondata/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "albiondata/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "DJANGO_SETTINGS_MODULE": "albiondata.settings"
        },
        "commands": [
            "python manage.py collectstatic --noinput"
        ]
    }
}
